<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
      <h1 class="text-center">Phone Session Booking</h1>
      <%= form_tag '/bookings', :method => :post do %>
        <%= text_field_tag 'code', nil, :class => 'form-control text-center text-uppercase', :placeholder => 'Enter  Code', :autofocus => true %>
        <%= button_tag 'Go!', :class => 'btn btn-native btn-block'%>
      <% end %>
    </div>
  </div>
</div>