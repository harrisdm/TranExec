<div id="app"></div>

<script>
  var app = app || {};
  app.Data = {};

  app.Data.accessCode = '<%= params['code'] %>';
  app.Data.appointment_block_id = <%= @appointment_block.id %>;
</script>

<script id="participantsTemplate" type="text/template">
  {[ if (participants === 0) { ]}
    <h1 class="text-center">Thankyou for using TranExec!</h1>
  {[ } else { ]}
    <div id="participantList" class="list-group"></div>
  {[ } ]}

  <button id="homeBtn" class="btn btn-native center-block">Enter New Access Code</button>
</script>

<script id="participantTemplate" type="text/template">
  {{ name }}
</script>

<script id="detailsTemplate" type="text/template">
  <form>
    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input type="text" class="form-control" id="phone">
    </div>
    <div class="form-group">
      <label for="email">Email Address</label>
      <input type="email" class="form-control" id="email">
    </div>
    <label>Reminder Method</label>
    <div class="radio">
      <label>
        <input type="radio" name="reminder" id="smsRadio" value="SMS" checked>SMS
      </label>
      <label>
        <input type="radio" name="reminder" id="emailRadio" value="Email">Email
      </label>
    </div>
    <button id="appointmentsBtn" class="btn btn-native">View Available Appointments</button>
  </form>
</script>

<script id="appointmentsTemplate" type="text/template">
</script>

<script id="appointmentGroupTemplate" type="text/template">
  <h1>{{ groupHeader }}</h1>
  <hr>
  <div class="list-group appointmentList"></div>
</script>

<script id="appointmentTemplate" type="text/template">
  {{ datetime_nice }}

  {[ if (participant_id === app.Data.participantID) { ]}
    <span class="label label-success">Booked</span>
  {[ } ]}
</script>
