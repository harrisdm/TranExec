<p id="notice"><%= notice %></p>

<p>
  <strong>Company:</strong>
  <%= @project.company %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>


<% if @workshops.empty? %>
  <p>No Workshops have been set up for this project</p>
<% else %>

<table class="table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Session</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= "#{workshop.project.company}, #{workshop.project.name}" %></td>
        <td><%= workshop.workshop_type.name %></td>
        <td><%= workshop.datetime.strftime("%a, %d %b %Y") %></td>
        <td><%= workshop.location %></td>
        <td><%= link_to 'Show', workshop %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
        <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
<%= link_to 'Add a Workshop',  new_workshop_path %>

