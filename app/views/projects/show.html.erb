<p id="notice"><%= notice %></p>

<p>
  <strong>Company:</strong>
  <%= @project.company %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>


<% if @workshops.empty? %>
  <p>No Workshops have been set up for this project</p>
<% else %>

<table class="table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Session</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= "#{workshop.project.company}, #{workshop.project.name}" %></td>
        <td><%= workshop.workshop_type.name %></td>
        <td><%= date_string(workshop.datetime) %></td>
        <td><%= workshop.location %></td>
        <td><%= link_to 'Show', project_workshop_path(project_id: workshop.project_id, id: workshop.id ) %></td>
        <td><%= link_to 'Edit', edit_project_workshop_path(project_id: workshop.project_id, id: workshop.id ) %></td>
        <td><%= link_to 'Destroy', project_workshop_path(project_id: workshop.project_id, id: workshop.id ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %> |
<%= link_to 'Add a Workshop',  new_project_workshop_path(@project) %>

