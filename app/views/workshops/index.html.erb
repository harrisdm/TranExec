<p id="notice"><%= notice %></p>

<h1>Listing Workshops</h1>

<table>
  <thead>
    <tr>
      <th>Datetime</th>
      <th>Location</th>
      <th>Workshop type</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.datetime %></td>
        <td><%= workshop.location %></td>
        <td><%= workshop.workshop_type_id %></td>
        <td><%= workshop.project_id %></td>
        <td><%= link_to 'Show', workshop %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
        <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

