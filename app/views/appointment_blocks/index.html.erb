<p id="notice"><%= notice %></p>

<h1>Listing Appointment Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Workshop</th>
      <th>Password digest</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment_blocks.each do |appointment_block| %>
      <tr>
        <td><%= appointment_block.workshop_id %></td>
        <td><%= appointment_block.password_digest %></td>
        <td><%= appointment_block.active %></td>
        <td><%= link_to 'Show', appointment_block %></td>
        <td><%= link_to 'Edit', edit_appointment_block_path(appointment_block) %></td>
        <td><%= link_to 'Destroy', appointment_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

